package com.andrews.escenario;

import com.andrews.spaceinvaders.GameMain;
import com.badlogic.gdx.graphics.Texture;
import com.andrews.estructuras.*;
import com.andrews.estructuras.*;

import java.util.ArrayList;

import com.andrews.estructuras.*;;

@SuppressWarnings("unused")
public class Nivel1 extends AbstractScreen {
	
	@SuppressWarnings("rawtypes")
	private ArrayList[] listaHileras;
	public int nivel = 1;

	public Nivel1(GameMain main) {
		super(main);    
		listaHileras[0].add(ListaEnemigoFactory.getLista("hileraBasica"));
		listaHileras[1].add(ListaEnemigoFactory.getLista("hileraA"));
		listaHileras[2].add(ListaEnemigoFactory.getLista("hileraBasica"));
		listaHileras[3].add(ListaEnemigoFactory.getLista("hileraB"));
		listaHileras[4].add(ListaEnemigoFactory.getLista("hileraBasica"));
		listaHileras[5].add(ListaEnemigoFactory.getLista("hileraA"));
		listaHileras[6].add(ListaEnemigoFactory.getLista("hileraB"));
		
	}
	
	@Override
	public void render(float delta) {
		if(nivel==1) {
			ArrayList<String> hileras = new ArrayList<String>();
			main.fondo = new HileraBasica(main, this);
			main.setScreen(main.fondo);
		}
	}
	
}
